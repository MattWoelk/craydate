{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "game-simulator-win: cargo build (dev)",
            "command": "cargo",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${config:simulatorWinRoot}",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "type": "process",
            "label": "game-simulator-win: cargo check",
            "command": "cargo",
            "args": [
                "check",
            ],
            "options": {
                "cwd": "${config:simulatorWinRoot}",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "type": "process",
            "label": "game-simulator-win: make pdx (dev)",
            "command": "${config:simulatorWinRoot}\\target\\x86_64-pc-windows-msvc\\debug\\make_pdx.exe",
            "dependsOn": [
                "game-simulator-win: cargo build (dev)",
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "game-simulator-win: run simulator (dev)",
            "command": "${config:simulatorWinRoot}\\target\\x86_64-pc-windows-msvc\\debug\\run_simulator.exe",
            "args": [
                ">stdout.txt",
                "2>&1",
            ],
            "dependsOn": [
                "game-simulator-win: make pdx (dev)"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
    ],
}