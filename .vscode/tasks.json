{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "simulator-win: cargo build (dev)",
            "command": "cargo",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "simulator-win",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "type": "process",
            "label": "simulator-win: cargo check",
            "command": "cargo",
            "args": [
                "check",
            ],
            "options": {
                "cwd": "simulator-win",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "type": "process",
            "label": "simulator-win: cargo build bins (dev)",
            "command": "cargo",
            "args": [
                "build",
                "--bins"
            ],
            "options": {
                "cwd": "simulator-win",
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "type": "process",
            "label": "simulator-win: make pdx (dev)",
            "command": "simulator-win\\target\\x86_64-pc-windows-msvc\\debug\\make_pdx.exe",
            "dependsOn": [
                "simulator-win: cargo build bins (dev)"
            ],
            "group": "build",
        },
        {
            "type": "process",
            "label": "simulator-win: run simulator (dev)",
            "command": "simulator-win\\target\\x86_64-pc-windows-msvc\\debug\\run_simulator.exe",
            "args": [
                "${env:PLAYDATE_SDK_PATH}\\bin\\PlaydateSimulator.exe",
                "C:\\Users\\Admin\\Documents\\helloworld.pdx"
            ],
            "dependsOn": [
                "simulator-win: make pdx (dev)"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
            }
        },
    ]
}